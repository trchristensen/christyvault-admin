{
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
    "printWidth": 120,
    "overrides": [
        {
            "files": "*.blade.php",
            "options": {
                "parser": "html",
                "printWidth": 120
            }
        },
        {
            "files": "*.php",
            "options": {
                "printWidth": 120,
                "tabWidth": 4
            }
        }
    ]
} 